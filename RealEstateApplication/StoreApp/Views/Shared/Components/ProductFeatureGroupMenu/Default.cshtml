@model IEnumerable<ProductFeatureGroup>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Product Feature
    </h6>
</div>


<div class="my-4">
    <ul class="list-group">

        @foreach (var productFeatureGroup in Model )
        {
            <li class="list-group-item">
            @productFeatureGroup.value
                <ul class="list-group">
                    <li class="list-group-item">
                        @await Component.InvokeAsync("ProductFeatureMenu",productFeatureGroup.id)
                    </li>
                </ul>
            </li>
        }

    </ul>

</div>